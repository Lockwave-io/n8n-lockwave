	"description": "n8n community node for the Lockwave SSH Key Management API",
	"keywords": [
		"n8n-community-node-package",
		"n8n",
		"lockwave",
		"ssh",
		"key-management",
		"devops",
		"infrastructure"
	],
	"license": "MIT",
	"author": {
		"name": "Lockwave",
		"url": "https://lockwave.io"
	},
	"homepage": "https://lockwave.io",
	"repository": {
		"type": "git",
		"url": "https://github.com/lockwave-io/n8n-nodes-lockwave.git"
	},
	"main": "index.js",
	"scripts": {
